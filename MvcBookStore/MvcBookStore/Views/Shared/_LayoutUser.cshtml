<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Công ty cổ phẩn dược phẩm</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap homepage/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/HomePage/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <link href="~/Content/HomePage/css/shop-homepage.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","BookStore")">
                Trang chủ
            </a>
            @Html.Action("GiohangPartial", "Giohang")
            </a>
            <a class="navbar-brand" href="#">
                @ViewBag.TenDN
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        @*<a class="nav-link" href="#">
                                Home
                                <span class="sr-only">(current)</span>
                            </a>*@
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login","Nguoidung")">Đăng Nhập</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("DangKy","Nguoidung")">Đăng Ký</a>
                    </li>
                    <li class="nav-item">
                        <a>
                            @using (Html.BeginForm("Index", "BookStore", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
                            {
                                <p style="text-align:center">
                                    @Html.TextBox("SearchString")
                                    <input type="submit" value="Tìm kiếm" />
                                </p>
                            }
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h1 class="my-4">Chủ đề</h1>
                <div class="list-group" style="text-align:center">
                    @*<a href="#" class="list-group-item">Category 1</a>*@
                    @Html.Action("Chude", "BookStore")
                </div>
                <h1 class="my-4">Nhà xuất bản</h1>
                <div class="list-group">
                    @*<a href="#" class="list-group-item">Category 1</a>*@
                    @Html.Action("NhaXuatban", "BookStore")
                </div>
            </div>
            <!-- /.col-lg-3 -->
            <div class="col-lg-9">
                <div>
                    @RenderBody()
                </div>
            </div>
            <!-- /.col-lg-9 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Nguyễn Khải - 15dh110017</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script src="~/Scripts/vendor homepage/js/jquery.min.js"></script>
    <script src="~/Scripts/HomePage/vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/vendor homepage/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/HomePage/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
